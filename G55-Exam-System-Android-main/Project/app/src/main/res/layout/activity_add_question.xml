<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddQuestionActivity">

    <EditText
        android:id="@+id/QuestionNumberEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Question Number" />

    <EditText
        android:id="@+id/QuestionEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter Question"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/Option1EditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter Option-1"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/Option2EditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Option-2"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/Option3EditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Option-3"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/Option4EditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Option-4"
        android:inputType="textMultiLine"
        />

    <EditText
        android:id="@+id/AnswerEditTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Answer Using Option Number in Numeric " />

    <Button
        android:id="@+id/AddQuestions_confirm_B"
        android:background="@drawable/round_view"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Confirm" />


</LinearLayout>